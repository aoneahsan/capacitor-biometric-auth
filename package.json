{
  "name": "@capacitor-community/biometric-auth",
  "version": "0.0.1",
  "description": "Biometric Authentication Plugin for Capacitor",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "android/gradle.properties",
    "android/settings.gradle",
    "android/proguard-rules.pro",
    "dist/",
    "ios/Plugin/",
    "CapacitorBiometricAuth.podspec"
  ],
  "author": {
    "email": "aoneahsan@gmail.com",
    "name": "Ahsan Mahmood (Aoneahsan)",
    "url": "https://aoneahsan.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capacitor-community/biometric-auth.git"
  },
  "bugs": {
    "url": "https://github.com/capacitor-community/biometric-auth/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "biometric",
    "authentication",
    "fingerprint",
    "face-id",
    "touch-id",
    "webauthn"
  ],
  "scripts": {
    "build": "npm run clean && npm run tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "tsc": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint . --ext ts",
    "prettier": "prettier --write .",
    "prepublishOnly": "npm run build",
    "swiftlint": "cd ios && swiftlint lint --fix --format --path Plugin --verbose"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.0.0"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
